{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "commonjs",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "node"
  },
  "include": [".github/actions/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}